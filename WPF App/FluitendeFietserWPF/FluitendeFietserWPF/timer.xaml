<Window x:Class="FluitendeFietserWPF.timer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FluitendeFietserWPF"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="timer" Height="300" Width="500">
    <Grid Background="#FF97C2D0">
        
        <TextBox Name="hours" Height="50" Width="50" Margin="0,0,100,0"></TextBox>
        <TextBox Name="minuten" Height="50" Width="50"></TextBox>
        <TextBox Name="seconden" Height="50" Width="50" Margin="100,0,0,0"></TextBox>
        <Button Content="(re)set timer" Name="settimer" Click="settimer_Click" Height="50" Width="100" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,100,0,0"></Button>
        <TextBlock TextWrapping="Wrap" Text="Fluitende Fietser Timer" Width="500" Height="80" FontSize="40" FontWeight="Bold" TextAlignment="Center" VerticalAlignment="Top"/>
    </Grid>
</Window>
