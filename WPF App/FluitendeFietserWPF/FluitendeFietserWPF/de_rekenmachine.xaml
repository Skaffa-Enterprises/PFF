<Window x:Class="FluitendeFietserWPF.de_rekenmachine"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FluitendeFietserWPF"
        mc:Ignorable="d"
         Title="Rekenmachine" Height="350" Width="250">
    <Grid>
        <TextBlock x:Name="ResultTB" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" Height="70" Width="230" Background="#FFD4D4D4"/>
        <Grid Margin="10,100,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>


            <Button x:Name="___No_Name_" Content="7" Grid.Row="0" Grid.Column="0" Click="Button_Click"/>
            <Button Content="8" Grid.Row="0" Grid.Column="1" Click="Button_Click"/>
            <Button Content="9" Grid.Row="0" Grid.Column="2" Click="Button_Click"/>
            <Button Content="/" Grid.Row="0" Grid.Column="3" Click="operator_Click"/>

            <Button Content="4" Grid.Row="1" Grid.Column="0" Click="Button_Click"/>
            <Button Content="5" Grid.Row="1" Grid.Column="1" Click="Button_Click"/>
            <Button Content="6" Grid.Row="1" Grid.Column="2" Click="Button_Click"/>
            <Button Content="x" Grid.Row="1" Grid.Column="3" Click="operator_Click"/>

            <Button Content="1" Grid.Row="2" Grid.Column="0" Click="Button_Click"/>
            <Button Content="2" Grid.Row="2" Grid.Column="1" Click="Button_Click"/>
            <Button Content="3" Grid.Row="2" Grid.Column="2" Click="Button_Click"/>
            <Button Content="-" Grid.Row="2" Grid.Column="3" Click="operator_Click"/>

            <Button Content="," Grid.Row="3" Grid.Column="2" Click="Button_Click"/>
            <Button Content="0" Grid.Row="3" Grid.Column="1" Click="Button_Click"/>
            <Button Content="C" Grid.Row="3" Grid.Column="0" Click="C_Click"/>
            <Button Content="=" Grid.Row="4" Grid.Column="3" Click="bereken_Click"/>
            <Button Content="+" Grid.Row="3" Grid.Column="3" Click="operator_Click"/>
        </Grid>
    </Grid>
</Window>
